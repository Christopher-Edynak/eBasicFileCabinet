.wrapper_with_padding
  #document_show
    %h1.title= @document.title
    %p= simple_format(@document.content)

    .buttons
      = link_to "All Documents", documents_path, class: "button"
      = link_to "Edit", edit_document_path(@document), class: "button"
      = link_to "Delete", document_path(@document), method: :delete, data: { confirm: "Are you sure?" }, class: "button"